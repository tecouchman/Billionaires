        android:layout_below="@+id/billionaire_age_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/billionaire_imageview"
        android:layout_toEndOf="@+id/billionaire_imageview"
        android:layout_alignBottom="@+id/billionaire_imageview" />
    />

</RelativeLayout>
