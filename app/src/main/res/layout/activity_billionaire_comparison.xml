<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C50027"

    tools:context="com.company.tom.testapplication.BillionaireComparison">


     <ImageView
        android:id="@+id/billionaire_imageview"

        android:layout_width="200dp"
         android:layout_height="304dp"
         android:paddingRight="2dp"
         android:paddingBottom="2dp"
         android:background="#C50027"
         android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/billionaire_name_textview"
        android:text="James O'Claire and Tom Couchman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="30sp"
        android:textColor="#ffffff"

        android:background="#41008f"
        android:gravity="center"
        android:layout_toEndOf="@+id/billionaire_imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:id="@+id/billionaire_worth_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="30sp"
        android:background="#41008f"
        android:text="$65 Billion"
        android:width="200dp"
        android:height="50dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billionaire_name_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/billionaire_imageview"
        android:layout_toEndOf="@+id/billionaire_imageview" />
        />

    <TextView
    android:id="@+id/billionaire_age_textview"
        android:text="Age: 27"
        android:background="#41008f"
        android:textSize="30sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billionaire_worth_textview"
        android:layout_alignRight="@+id/billionaire_worth_textview"
        android:layout_alignEnd="@+id/billionaire_worth_textview"
        android:layout_toRightOf="@+id/billionaire_imageview"
        android:layout_toEndOf="@+id/billionaire_imageview" />
    />

    <TextView
        android:id="@+id/user_salary_textview"
        android:text="It would take you 1000 years to be as cool as we are."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:background="#41008f"
        android:width="200dp"
        android:height="200dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billionaire_imageview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
        />



</RelativeLayout>
