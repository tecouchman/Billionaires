<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#41008f"

    tools:context="com.company.tom.testapplication.BillionaireComparison">


     <ImageView
            android:id="@+id/billionaire_imageview"
            android:layout_width="200dp"
            android:layout_height="304dp"
         android:paddingRight="2dp"
         android:paddingBottom="2dp"
         android:background="#C50027"
         android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/billionaire_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:width="220dp"
        android:height="80dp"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/billionaire_imageview"
        android:layout_toEndOf="@+id/billionaire_imageview" />



    <TextView
        android:id="@+id/billionaire_worth_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:width="200dp"
        android:height="50dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billionaire_name_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/billionaire_imageview"
        android:layout_toEndOf="@+id/billionaire_imageview" />
        />

    <TextView
    android:id="@+id/billionaire_age_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:width="200dp"
    android:height="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billionaire_worth_textview"
        android:layout_alignRight="@+id/billionaire_worth_textview"
        android:layout_alignEnd="@+id/billionaire_worth_textview"
        android:layout_toRightOf="@+id/billionaire_imageview"
        android:layout_toEndOf="@+id/billionaire_imageview" />
    />

    <TextView
        android:id="@+id/user_salary_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"

        android:width="200dp"
        android:height="200dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/billionaire_imageview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        />



</RelativeLayout>
